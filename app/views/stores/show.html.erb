<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="row justify-content-center">
        <div class="col-12 col-md-6">
          <h2><%= @store.name %></h2>
          <%= image_tag(@store.image.thumb.url, class:"mt-3 img-fluid mx-auto img-thumbnail", alt:"施設画像") %>
          <div class="row mt-2">
            <div class="col-6">
              <%= link_to user_path(@store.user), class:"text-decoration-none text-reset" do %>
                <button type="button" class="btn btn-outline-secondary btn-sm">情報提供者：<%= @store.user.name %></button>
              <% end %>
            </div>
            <% if @store.user == current_user%>
              <div class="col-6">
                <%= link_to store_path(@store), method: :delete, data: { confirm: "本当に削除しますか？" }, class:"text-decoration-none text-reset" do %>
                  <button type="button" class="btn btn-outline-secondary btn-sm">施設情報を削除する</button>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        <div class= "col-12 col-md-6 mt-5 pt-1">
          <div class= "table-responsive">
            <table class="table table-borderless">
              <tbody>
                <tr>
                  <th scope="row">
                    <% if user_signed_in? %>
                      <%= render 'favorites/favorite', store: @store %>
                    <% else %>
                      <div class ="favorite-icon" id="store_favorite_<%= @store.id %>">
                        <%= link_to store_favorite_path(@store), class:"favorite-#{@store.id} text-decoration-none", method: :post do %>
                          <i class="far fa-heart"></i>
                        <% end %>
                        <span class="favorite-count text-muted"><%= @store.favorites_count %></span>
                      </div>
                    <% end %>
                  </th>
                </tr>
                <tr>
                  <th scope="row">
                    <div class ="reviews-icon">
                      <div class="review-average-rating d-inline-block" data-score=<%= @store.average_rating %>></div>
                      <span class="reviews-average-score me-3"><strong><%= @store.average_rating %></strong></span>
                    </div>
                  </th>
                </tr>
                <tr>
                  <th scope="row">施設名:</th>
                  <td><%= @store.name %></td>
                </tr>
                <tr>
                  <th scope="row">施設紹介:</th>
                  <td><%= @store.introduction %></td>
                </tr>
                <tr>
                  <th scope="row">施設URL:</th>
                  <td><%= link_to @store.url, @store.url, target: :_blank %></td>
                </tr>
                <tr>
                  <th scope="row">住所:</th>
                  <td colspan="2">〒<%= @store.postcode %></td>
                </tr>
                <tr>
                  <th scope="row"></th>
                  <td colspan="2"><%= @store.prefecture_code%> <%= @store.city %></td>
                </tr>
              </tbody>
            </table>
          </div>
          <div>
            <% if @store.user == current_user%>
              <div class="d-grid gap-2 col-12">
                <%= link_to "編集", edit_store_path(@store), class:"btn btn-warning" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mt-5">
        <hr>
        <div class="row justify-content-center">
          <div class="col-8">
            <h4>☆利用したパパママからのメッセージ☆</h4>
          </div>
        </div>
        <% if user_signed_in? && !current_user.already_reviewed?(@store) %>
          <%= render 'shared/review_form', review: @review, store: @store %>
        <% end %>
      </div>
      <div id="reviews_list">
        <%= render 'shared/reviews_list', reviews: @reviews %>
      </div>
      <% if @reviews.present? %>
        <div id ="paginate" class="paginate mt-3">
          <%= render 'shared/paginate', pages: @reviews, page_name: 'page' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $('.review-average-rating').empty();
  $('.review-average-rating').raty({
    readOnly: true,
    size: 20,
    starOn: "<%= asset_path('star-on.png') %>",
    starOff: "<%= asset_path('star-off.png') %>",
    starHalf: "<%= asset_path('star-half.png') %>",
    score: function() {
      return $(this).attr('data-score')
    }
  });
</script>
