<div class="container my-5">
  <div class="card border-warning mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <%= image_tag(@user.avatar.medium_thumb.url, class:"m-3 img-fluid img-thumbnail", alt:"ユーザー画像") %>
      </div>
      <div class="col-md-8">
        <div class="card-body d-grid gap-2">
          <h5 class="card-title">名前：<%= @user.name %></h5>
          <p class="card-text card-introduction">自己紹介：<%= @user.introduction %></p>
          <% if @user == current_user%>
            <p class="card-text card-email">メールアドレス：<%= @user.email%></p>
            <%= link_to "編集", edit_user_registration_path, class:"btn btn-warning" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-5">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <li class="nav-item" role="presentation">
        <%= link_to "投稿した施設一覧", "#store_index", class:"nav-link active", 'id': :"store_index_tab", 'data-bs-toggle': :"tab", 'role': :"tab",  'aria-controls': :"store_index", 'aria-selected': :"true" %>
      </li>
      <li class="nav-item" role="presentation">
        <%= link_to "いいねしたスポット（後から追加）", "#profile", class:"nav-link", 'id': :"profile-tab", 'data-bs-toggle': :"tab", 'role': :"tab",  'aria-controls': :"profile", 'aria-selected': :"false" %>
      </li>
    </ul>

    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="store_index" role="tabpanel" aria-labelledby="store_index_tab">
        <div class="container">
          <div class="row">
            <div class="col-12 my-5">
              <h4><%= @user.name %>さんが紹介してくれた施設の一覧</h4>
            </div>
          </div>
          <div class="row">
            <div class="mb-3">
              <%= render "shared/paginate", pages: @stores %>
            </div>
            <% @stores.each_with_index do |store, index| %>
              <div class="store-card col-12 col-md-4 col-xl-3">
                <div class="card  store-<%= index + 1 %> m-2">
                  <%= link_to store_path(store) do %>
                    <%= image_tag(store.image.url,class:"card-img-top img-thumbnail", alt: "施設画像-#{index + 1}") %>
                  <% end %>
                  <div class="card-body">
                    <h5 class="card-title"><%= store.name %></h5>
                    <% if user_signed_in? %>
                      <p class="card-text"><%= render 'favorites/favorite', store: store %></p>
                    <% else %>
                      <div class ="favorite-icon" id="store_favorite_<%= store.id %>">
                        <%= link_to store_favorite_path(store), class:"text-decoration-none", method: :post do %>
                          <i class="far fa-heart"></i>
                        <% end %>
                        <span class="text-muted"><%= store.favorites.size %></span>
                      </div>
                    <% end %>
                    <p class="card-text text-truncate">施設紹介：<%= store.introduction %></p>
                    <p class="card-text">住所：<%= store.prefecture_code %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          <div class="mt-3">
            <%= render "shared/paginate", pages: @stores %>
          </div>
        </div>
      </div>

      <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <h1>機能を実装したら追加するよ！</h1>
      </div>
    </div>
  </div>
</div>
