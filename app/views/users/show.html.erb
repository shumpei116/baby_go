<div class="container mt-5">
  <h2>マイページ</h2>
  <div class="row mt-3">
    <div class="col-md-4 col-12 bg-primary">
      <%= image_tag(@user.avatar.medium_thumb.url, class:"m-3", alt:"ユーザー画像") %>
    </div>
    <div class="col-md-8 col-12 bg-info">
      <div class="mt-5 my-3">
        <p>名前    :　<%= current_user.name %></p>
        <p>自己紹介 :　<%= current_user.introduction %></p>
        <p>更新日  :  <%= current_user.updated_at %></p>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
      <%= link_to "投稿したスポット一覧（後から編集）", "#", class:"nav-link active", 'id': :"home-tab", 'data-bs-toggle': :"tab", 'role': :"tab",  'aria-controls': :"#", 'aria-selected': :"true" %>
      <%# <a class="nav-link active" id="home-tab" data-bs-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Home</a> %>
    </li>
    <li class="nav-item" role="presentation">
      <%= link_to "いいねしたスポット（後から編集）", "＄", class:"nav-link", 'id': :"profile-tab", 'data-bs-toggle': :"tab", 'role': :"tab",  'aria-controls': :"＄", 'aria-selected': :"false" %>
      <%# <a class="nav-link" id="profile-tab" data-bs-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profile</a> %>
    </li>
  </ul>
  <div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">...</div>
    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">...</div>
    <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
  </div>
</div>