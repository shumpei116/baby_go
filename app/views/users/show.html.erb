<div class="container my-5">
  <div class="card border-warning mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <%= image_tag(@user.avatar.medium_thumb.url, class:"m-3 img-fluid img-thumbnail", alt:"ユーザー画像") %>
      </div>
      <div class="col-md-8">
        <div class="card-body d-grid gap-2">
          <h5 class="card-title">名前：<%= current_user.name %></h5>
          <p class="card-text">自己紹介：<%= current_user.introduction %></p>
          <p class="card-text"><small>アカウント更新：<%= current_user.updated_at %></small></p>
          <%= link_to "編集", edit_user_registration_path, class:"btn btn-warning" %>
        </div>
      </div>
    </div>
  </div>
</div>

