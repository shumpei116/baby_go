<div class="container">
  <div class="row">
    <div class="col-12 my-5 d-flex justify-content-center">
      <h2><i class="fas fa-crown"></i>レビューランキング</h2>
    </div>
    <div class="d-flex justify-content-center mb-3">
      <%= render 'select_prefecture_form', q: @q %>
    </div>
  </div>
  <% if @stores.present? %>
    <div id ="paginate1" class="paginate-1 mb-3">
      <%= render 'shared/paginate', pages: @stores, page_name: 'rank_page' %>
    </div>
    <div id="ranks_list">
      <%= render 'ranks_list', stores: @stores %>
    </div>
    <div id ="paginate2" class="paginate-2 mt-3">
      <%= render 'shared/paginate', pages: @stores, page_name: 'rank_page' %>
    </div>
  <% else %>
    <div class="row mt-5">
      <div class="col-12 d-flex justify-content-center">
        <div>
          <h5><%= (params[:q][:prefecture_code_cont]) %>にはまだ施設が投稿されていません</h5>
          <%= link_to new_store_path, class:"btn btn-lg btn-outline-warning mt-5 d-flex justify-content-center" do %>
            <i class="far fa-edit"></i>ここから施設を投稿してみよう！
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
