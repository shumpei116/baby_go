<section class="col-12 col-md-6">
  <h1><span  class="title-border h2 px-4"><%= store.name %></span></h1>
  <%= image_tag(store.image.thumb.url, class:"mt-3 img-fluid mx-auto img-thumbnail", alt:"施設画像") %>
  <div class="row mt-2">
    <div class="col-6">
      <%= link_to user_path(@store.user), class:"text-decoration-none text-reset" do %>
        <button type="button" class="btn btn-outline-secondary btn-sm"><i class="far fa-user me-1"></i>情報提供者：<%= store.user.name %></button>
      <% end %>
    </div>
    <% if store.user == current_user%>
      <div class="col-6 text-end">
        <%= link_to store_path(store), method: :delete, data: { confirm: "本当に削除しますか？" }, class:"text-decoration-none text-reset" do %>
          <button type="button" class="btn btn-outline-secondary btn-sm">施設情報を削除</button>
        <% end %>
      </div>
    <% end %>
  </div>
</section>